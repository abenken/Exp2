#include<iostream>
#include<conio.h>

using namespace std;

int main()
{
	float x, y, z;

	cout << "enter first number" << endl;
	cin >> x;
	cout << "enter second number"<< endl;
	cin >> y;
	cout << "enter third number" << endl;
	cin >> z;

	if (x>z && x>y)
	cout << x << " largest number" << endl;
	
	else if (y>x && y>z)
	cout << y << " largest number" << endl;
	
	else if (z>x && z>y)
	cout << z << " largest number" << endl;
	
	else if (x==y && y==z && x==z)
	cout << "The numbers are equal" << endl;
	
	else
	cout << "repeat and enter correct values" << endl;

	return 0;
}
